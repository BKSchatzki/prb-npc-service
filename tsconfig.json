{
  "compilerOptions": {
    // Base options with default setup
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    // Enable strict type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    // Transpile TypeScript code to JavaScript
    "module": "NodeNext",
    "outDir": "dist",
    // Only es2022 needed because not running in DOM
    "lib": ["es2022"],
    // Handle default paths and import aliases
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  // Include the necessary files for project
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
